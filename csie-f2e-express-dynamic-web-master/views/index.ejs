<!DOCTYPE html>
<html lang="en">

<head>
  <% include shared/head %>
</head>

<body>
  <% include shared/navbar %>

    <header id="indexHeader" class="jumbotron header">
      <div class="container">
        <h1>Home Page</h1>
        <p>Lorem ipsum dolor sit amet.</p>
      </div>
    </header>
    <section class="py-3">
      <div class="container">
        <h1>商品列表</h1>
        <div class="row">
          <% productList.forEach(product=> { %>
            <div class="col-md-4 col-sm-6">
              <!-- <h3>
              <--%=product.name%>
          </h3>
          <p>
              <--%=product.price%> 
          </p> -->
              <div class="card mb-3">
                <img class="card-img-top" src="<%=product.image%>" alt="">
                <div class="card-body">
                  <h4 class="card-title">
                    <%=product.name%>
                  </h4>
                  <h4>
                    <span class="badge badge-info">
                      <%=product.category %>
                    </span>
                  </h4>
                  <p class="card-text">
                    NTD$<%=product.price%>
                  </p>
                  <!---/product/edit/PRODUCT_ID-->
                  <% if(auth.isAdmin) { %>
                    <a href="/product/edit/<%= product.id %>" class="btn btn-warning">
                      編輯
                    </a>
                    <% } %>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </section>
    <% include shared/scripts %>
</body>

</html>